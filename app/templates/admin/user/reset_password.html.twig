{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'user.titles.reset'|trans({'%email%': user.email}) }}{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'user.subtitles.manage'|trans }}</p>
            <h4 class="mb-0">{{ 'user.titles.reset'|trans({'%email%': user.email}) }}</h4>
        </div>
        <a class="btn btn-text" href="{{ path('admin_user_index') }}">{{ 'form.actions.back_to_list'|trans }}</a>
    </div>
{% endblock %}

{% block page_content %}
    <div class="card">
        <div class="card-header pb-0">
            <h6 class="mb-1">{{ 'user.labels.reset_details'|trans }}</h6>
            <p class="text-muted small mb-0">{{ 'user.labels.reset_help'|trans }}</p>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.first) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.plainPassword.second) }}
                </div>
                <div class="col-12 d-flex justify-content-end">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
