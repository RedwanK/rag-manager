{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'user.titles.new'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'user.subtitles.manage'|trans }}</p>
            <h4 class="mb-0">{{ 'user.titles.new'|trans }}</h4>
        </div>
        <a class="btn btn-text" href="{{ path('admin_user_index') }}">{{ 'form.actions.back_to_list'|trans }}</a>
    </div>
{% endblock %}

{% block page_content %}
    <div class="card">
        <div class="card-header pb-0">
            <h6 class="mb-1">{{ 'user.labels.create_details'|trans }}</h6>
            <p class="text-muted small mb-0">{{ 'user.labels.create_help'|trans }}</p>
        </div>
        <div class="card-body">
            {% include 'admin/user/_form.html.twig' with { form: form } %}
        </div>
    </div>
{% endblock %}
