{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'repository.titles.config'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'repository.subtitles.github'|trans }}</p>
            <h4 class="mb-0">{{ 'repository.titles.config'|trans }}</h4>
        </div>
        {% if config.id %}
            <span class="badge bg-label-primary text-uppercase">{{ 'repository.labels.active'|trans }}</span>
        {% endif %}
    </div>
{% endblock %}

{% block page_content %}
    <div class="row g-4">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header pb-0">
                    <h5 class="mb-1">{{ 'repository.sections.coordinates.title'|trans }}</h5>
                    <p class="text-muted mb-0">{{ 'repository.sections.coordinates.help'|trans }}</p>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-6">
                            {{ form_row(form.owner) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.defaultBranch) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.token) }}
                        </div>
                        <div class="col-12 d-flex justify-content-end">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card h-100">
                    <div class="card-header pb-0">
                    <h6 class="mb-1">{{ 'repository.sections.status.title'|trans }}</h6>
                    <p class="text-muted small mb-0">{{ 'repository.sections.status.help'|trans }}</p>
                </div>
                <div class="card-body d-flex flex-column gap-3">
                    {% if config.id %}
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge bg-label-{{ config.lastSyncStatus == 'success' ? 'success' : (config.lastSyncStatus == 'failed' ? 'danger' : 'secondary') }} text-uppercase">
                                {{ config.lastSyncStatus ?? 'N/A' }}
                            </span>
                            <div>
                                <div class="small text-muted">{{ 'repository.labels.last_sync'|trans }}</div>
                                <div class="fw-semibold">{{ config.lastSyncAt ? config.lastSyncAt|date('Y-m-d H:i') : 'repository.labels.never'|trans }}</div>
                            </div>
                        </div>
                        <div>
                            <div class="small text-muted">{{ 'repository.labels.tracked_repo'|trans }}</div>
                            <div class="fw-semibold">{{ config.repositorySlug }}</div>
                        </div>
                        <div class="p-3 rounded bg-label-primary bg-opacity-10">
                            <div class="small text-muted mb-1">{{ 'repository.labels.token'|trans }}</div>
                            <div class="fw-semibold">{{ token_preview ?? '********' }}</div>
                            <p class="text-muted small mb-0">{{ 'repository.labels.token_help'|trans }}</p>
                        </div>
                        {% if config.lastSyncMessage %}
                            <div class="alert alert-warning mb-0" role="alert">
                                <div class="fw-semibold mb-1">{{ 'repository.labels.last_message'|trans }}</div>
                                <div class="small">{{ config.lastSyncMessage }}</div>
                            </div>
                        {% endif %}
                    {% else %}
                        <p class="text-muted mb-0">{{ 'repository.labels.no_config'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
