{% extends 'layout/app.html.twig' %}

{% block title %}Configuration du dépôt{% endblock %}

{% block page_header %}
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">Paramétrage GitHub</p>
            <h4 class="mb-0">Configuration du dépôt</h4>
        </div>
        {% if config.id %}
            <span class="badge bg-label-primary text-uppercase">Actif</span>
        {% endif %}
    </div>
{% endblock %}

{% block page_content %}
    <div class="row g-4">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header pb-0">
                    <h5 class="mb-1">Coordonnées GitHub</h5>
                    <p class="text-muted mb-0">Définissez le dépôt utilisé par l'application et le token d'accès.</p>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-6">
                            {{ form_row(form.owner) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.defaultBranch) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.token) }}
                        </div>
                        <div class="col-12 d-flex justify-content-end">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6 class="mb-1">État de la configuration</h6>
                    <p class="text-muted small mb-0">Synthèse de la connexion au dépôt.</p>
                </div>
                <div class="card-body d-flex flex-column gap-3">
                    {% if config.id %}
                        <div class="d-flex align-items-center gap-3">
                            <span class="badge bg-label-{{ config.lastSyncStatus == 'success' ? 'success' : (config.lastSyncStatus == 'failed' ? 'danger' : 'secondary') }} text-uppercase">
                                {{ config.lastSyncStatus ?? 'N/A' }}
                            </span>
                            <div>
                                <div class="small text-muted">Dernière synchro</div>
                                <div class="fw-semibold">{{ config.lastSyncAt ? config.lastSyncAt|date('Y-m-d H:i') : 'Jamais' }}</div>
                            </div>
                        </div>
                        <div>
                            <div class="small text-muted">Dépôt suivi</div>
                            <div class="fw-semibold">{{ config.repositorySlug }}</div>
                        </div>
                        <div class="p-3 rounded bg-label-primary bg-opacity-10">
                            <div class="small text-muted mb-1">Jeton enregistré</div>
                            <div class="fw-semibold">{{ token_preview ?? '********' }}</div>
                            <p class="text-muted small mb-0">Les tokens sont chiffrés avant d'être stockés.</p>
                        </div>
                        {% if config.lastSyncMessage %}
                            <div class="alert alert-warning mb-0" role="alert">
                                <div class="fw-semibold mb-1">Dernier message</div>
                                <div class="small">{{ config.lastSyncMessage }}</div>
                            </div>
                        {% endif %}
                    {% else %}
                        <p class="text-muted mb-0">Aucune configuration enregistrée pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
