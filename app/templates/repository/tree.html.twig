{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'repository.titles.tree'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'repository.labels.tracking'|trans({'%slug%': config.repositorySlug}) }}</p>
            <h4 class="mb-0">{{ 'repository.titles.tree'|trans }}</h4>
            <div class="text-muted small mt-1">
                {{ 'repository.labels.last_sync'|trans }} : {{ config.lastSyncAt ? config.lastSyncAt|date('Y-m-d H:i') : 'repository.labels.never'|trans }} ·
                {{ 'repository.labels.status'|trans }} : {{ config.lastSyncStatus ?? 'n/a' }}
            </div>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            {% if is_granted('ROLE_EDITOR') %}
                <form method="post" action="{{ path('repository_sync') }}" data-turbo="false">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        {{ ux_icon('bx:refresh') }}<span>{{ 'repository.actions.sync'|trans }}</span>
                    </button>
                </form>
            {% endif %}
            <span class="badge bg-label-secondary text-uppercase">{{ 'repository.labels.node_count'|trans({'%count%': stats.total}) }}</span>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div class="row g-4">
        <div class="col-12">
            {% include 'repository/_tree_view.html.twig' with { treeData: treeData, stats: stats } %}
        </div>
        <div class="col-xl-12">
            <div class="card h-100">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">{{ 'repository.sections.cache.title'|trans }}</h6>
                        <p class="text-muted small mb-0">{{ 'repository.sections.cache.help'|trans }}</p>
                    </div>
                    <span class="badge bg-label-secondary">{{ 'repository.labels.node_count'|trans({'%count%': nodes|length}) }}</span>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 420px;">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>{{ 'repository.labels.path'|trans }}</th>
                                    <th class="text-nowrap">{{ 'repository.labels.type'|trans }}</th>
                                    <th class="text-nowrap text-end">{{ 'repository.labels.size'|trans }}</th>
                                    <th class="text-nowrap">{{ 'repository.labels.last_sync'|trans }}</th>
                                    <th class="text-nowrap">{{ 'repository.labels.status'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for node in nodes|slice(0, 50) %}
                                <tr>
                                    <td class="font-monospace">{{ node.path }}</td>
                                    <td class="text-capitalize">{{ node.type }}</td>
                                    <td class="text-end">{{ node.size ?? '—' }}</td>
                                    <td>{{ node.lastSyncedAt ? node.lastSyncedAt|date('Y-m-d H:i') : 'repository.labels.never'|trans }}</td>
                                    <td>
                                        {% set status = node.lastSyncStatus ?? 'n/a' %}
                                        <span class="badge bg-label-{{ status == 'synced' or status == 'success' ? 'success' : 'secondary' }}">{{ status }}</span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="5" class="text-center text-muted">{{ 'repository.labels.no_nodes'|trans }}</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% if nodes|length > 50 %}
                        <p class="text-muted small mt-2 mb-0">{{ 'repository.labels.first_nodes'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-xl-12">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6 class="mb-1">{{ 'repository.sections.logs.title'|trans }}</h6>
                    <p class="text-muted small mb-0">{{ 'repository.sections.logs.help'|trans }}</p>
                </div>
                <div class="card-body">
                    {% if logs is not empty %}
                        <ul class="list-unstyled mb-0">
                            {% for log in logs %}
                                <li class="d-flex align-items-start mb-3">
                                    {% set badge = log.status == 'success' ? 'success' : (log.status == 'failed' ? 'danger' : 'warning') %}
                                    <span class="badge bg-label-{{ badge }} me-3 mt-1">
                                        <i class="bx bx-time-five"></i>
                                    </span>
                                    <div>
                                        <div class="fw-semibold">{{ log.startedAt|date('Y-m-d H:i') }}{% if log.finishedAt %} → {{ log.finishedAt|date('H:i') }}{% endif %}</div>
                                        <div class="text-muted small mb-1">
                                            {{ log.status }}{% if log.triggeredBy %} · {{ log.triggeredBy }}{% endif %}
                                        </div>
                                        {% if log.message %}
                                            <div class="small">{{ log.message }}</div>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0">{{ 'repository.labels.no_logs'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
