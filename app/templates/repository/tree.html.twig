{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'repository.titles.tree'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'repository.labels.tracking'|trans({'%slug%': config.repositorySlug}) }}</p>
            <h4 class="mb-0">{{ 'repository.titles.tree'|trans }}</h4>
            <div class="text-muted small mt-1">
                {{ 'repository.labels.last_sync'|trans }} : {{ config.lastSyncAt ? config.lastSyncAt|date('Y-m-d H:i') : 'repository.labels.never'|trans }} ·
                {{ 'repository.labels.status'|trans }} : {{ config.lastSyncStatus ?? 'n/a' }}
            </div>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2">
            {% if is_granted('ROLE_EDITOR') %}
                <form method="post" action="{{ path('repository_sync') }}" data-turbo="false">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        {{ ux_icon('bx:refresh') }}<span>{{ 'repository.actions.sync'|trans }}</span>
                    </button>
                </form>
            {% endif %}
            <span class="badge bg-label-secondary text-uppercase">{{ 'repository.labels.node_count'|trans({'%count%': stats.total}) }}</span>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div class="row g-4">
        <div class="col-12">
            {% include 'repository/_tree_view.html.twig' with { treeData: treeData, stats: stats } %}
        </div>
        <div class="col-xl-12">
            <div class="card h-100">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">{{ 'repository.sections.cache.title'|trans }}</h6>
                        <p class="text-muted small mb-0">{{ 'repository.sections.cache.help'|trans }}</p>
                    </div>
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        <div class="btn-group btn-group-sm" role="group" aria-label="{{ 'repository.labels.sort_by'|trans }}">
                            {% set sortOptions = {
                                'ingestion': 'repository.labels.sort.ingestion'|trans,
                                'size': 'repository.labels.sort.size'|trans,
                                'name': 'repository.labels.sort.name'|trans,
                            } %}
                            {% for key, label in sortOptions %}
                                <a class="btn btn-outline-secondary {{ currentSort == key ? 'active' : '' }}" href="{{ path('repository_tree', {sort: key}) }}">{{ label }}</a>
                            {% endfor %}
                        </div>
                        <span class="badge bg-label-secondary">{{ 'repository.labels.node_count'|trans({'%count%': cachedNodes|length}) }}</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 420px;">
                        <table class="table table-sm align-middle mb-0">
                            <thead>
                                <tr>
                                    <th class="text-nowrap">{{ 'repository.labels.ingestion_status'|trans }}</th>
                                    <th>{{ 'repository.labels.name'|trans }}</th>
                                    <th>{{ 'repository.labels.path'|trans }}</th>
                                    <th class="text-nowrap text-end">{{ 'repository.labels.size_mb'|trans }}</th>
                                    <th class="text-end text-nowrap">{{ 'repository.labels.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for node in cachedNodes %}
                                {% set status = (node.ingestionStatus ?? 'unindexed')|lower %}
                                {% if status == 'unindexed' and not node.canEnqueue %}
                                    {% set status = 'cant_enqueue' %}
                                {% endif %}
                                {% set badge =
                                    status in ['failed', 'download_failed'] ? 'danger' :
                                    (status in ['queued', 'processing'] ? 'warning' :
                                        (status == 'indexed' ? 'success' : (status == 'cant_enqueue' ? 'secondary' : 'info')))
                                %}
                                <tr>
                                    <td>
                                        <span class="badge bg-label-{{ badge }} text-uppercase">{{ ('ingestion.status.' ~ status)|trans }}</span>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">{{ node.name }}</div>
                                        <div class="text-muted small">{{ node.extension ?: '—' }}</div>
                                    </td>
                                    <td class="font-monospace small">{{ node.path }}</td>
                                    <td class="text-end">{{ node.size ? ((node.size / 1024 / 1024)|number_format(2)) ~ ' Mo' : '—' }}</td>
                                    
                                    <td class="text-end">
                                        {% if node.type == 'blob' and node.canEnqueue %}
                                            <form method="post" action="{{ path('ingestion_queue_enqueue', {id: node.id}) }}" data-turbo="false" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ node.enqueueToken }}">
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    {{ ux_icon('qlementine-icons:new-16') }}
                                                    {{ 'ingestion.queue.actions.enqueue'|trans }}
                                                </button>
                                            </form>
                                        {% else %}
                                            <span class="text-muted small">{{ ux_icon('bx:no-entry') }}</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr><td colspan="7" class="text-center text-muted">{{ 'repository.labels.no_nodes'|trans }}</td></tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-12">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6 class="mb-1">{{ 'repository.sections.logs.title'|trans }}</h6>
                    <p class="text-muted small mb-0">{{ 'repository.sections.logs.help'|trans }}</p>
                </div>
                <div class="card-body">
                    {% if logs is not empty %}
                        <ul class="list-unstyled mb-0">
                            {% for log in logs %}
                                <li class="d-flex align-items-start mb-3">
                                    {% set badge = log.status == 'success' ? 'success' : (log.status == 'failed' ? 'danger' : 'warning') %}
                                    <span class="badge bg-label-{{ badge }} me-3 mt-1">
                                        <i class="bx bx-time-five"></i>
                                    </span>
                                    <div>
                                        <div class="fw-semibold">{{ log.startedAt|date('Y-m-d H:i') }}{% if log.finishedAt %} → {{ log.finishedAt|date('H:i') }}{% endif %}</div>
                                        <div class="text-muted small mb-1">
                                            {{ log.status }}{% if log.triggeredBy %} · {{ log.triggeredBy }}{% endif %}
                                        </div>
                                        {% if log.message %}
                                            <div class="small">{{ log.message }}</div>
                                        {% endif %}
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted mb-0">{{ 'repository.labels.no_logs'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
