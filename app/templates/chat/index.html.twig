{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'chat.title'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'chat.lead'|trans }}</p>
            <h4 class="mb-0">{{ 'chat.title'|trans }}</h4>
            <div class="text-muted small mt-1">{{ 'chat.helper'|trans }}</div>
        </div>
        <div class="d-flex align-items-center gap-2 flex-wrap">
            <span class="badge bg-label-info">{{ 'chat.badges.secure'|trans }}</span>
            <span class="badge bg-label-secondary">{{ 'chat.badges.live'|trans }}</span>
        </div>
    </div>
{% endblock %}

{% block page_content %}
    <div
        data-controller="chat"
        data-chat-conversations-url-value="{{ path('chat_conversations_list') }}"
        data-chat-create-conversation-url-value="{{ path('chat_conversations_create') }}"
        data-chat-messages-url-value="{{ path('chat_conversations_messages', {id: 0}) }}"
        data-chat-prompt-url-value="{{ path('chat_conversations_prompt', {id: 0}) }}"
        data-chat-cancel-url-value="{{ path('chat_messages_cancel', {id: 0}) }}"
        data-chat-stream-url-value="{{ path('chat_stream_stream', {conversationId: 0, messageId: 0}) }}"
        data-chat-initial-conversations-value='{{ conversations|json_encode(constant('JSON_HEX_APOS')) }}'
        class="chat-workspace"
    >
        <div class="row g-4">
            <div class="col-12 col-lg-4">
                <div class="card h-100">
                    <div class="card-header pb-2 d-flex justify-content-between align-items-start gap-3">
                        <div>
                            <p class="text-muted mb-1 small">{{ 'chat.sidebar.subtitle'|trans }}</p>
                            <h6 class="mb-0">{{ 'chat.sidebar.title'|trans }}</h6>
                        </div>
                        <button
                            type="button"
                            class="btn btn-sm btn-primary d-flex align-items-center gap-2"
                            data-action="click->chat#newConversation"
                            data-chat-target="newConversationButton"
                        >
                            {{ ux_icon('bx:plus') }}<span>{{ 'chat.sidebar.new'|trans }}</span>
                        </button>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush chat-conversation-list" data-chat-target="conversationList"></div>
                        <div class="p-4 text-center text-muted" data-chat-target="emptyConversations" hidden>
                            <div class="mb-2">{{ ux_icon('bx:chat') }}</div>
                            <p class="mb-2 fw-semibold">{{ 'chat.sidebar.empty.title'|trans }}</p>
                            <p class="mb-3 small">{{ 'chat.sidebar.empty.helper'|trans }}</p>
                            <button
                                type="button"
                                class="btn btn-outline-primary btn-sm"
                                data-action="click->chat#newConversation"
                            >
                                {{ 'chat.sidebar.new'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-8">
                <div class="card h-100 chat-card">
                    <div class="card-header d-flex justify-content-between align-items-start gap-3">
                        <div>
                            <p class="text-muted mb-1 small" data-chat-target="conversationMeta">{{ 'chat.thread.placeholder'|trans }}</p>
                            <h5 class="mb-0" data-chat-target="conversationTitle">{{ 'chat.thread.title'|trans }}</h5>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-label-primary d-flex align-items-center gap-2" data-chat-target="streamStatus" hidden>
                                <span class="spinner-border spinner-border-sm"></span>
                                <span data-chat-target="tokenCount">0</span>
                                <span>{{ 'chat.streaming.tokens'|trans }}</span>
                            </span>
                            <button
                                type="button"
                                class="btn btn-sm btn-outline-secondary d-none"
                                data-action="click->chat#cancelStream"
                                data-chat-target="cancelButton"
                            >
                                {{ ux_icon('bx:x-circle') }}
                                <span>{{ 'chat.actions.cancel'|trans }}</span>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0 chat-thread-wrapper">
                        <div class="p-3 chat-thread" data-chat-target="thread"></div>
                        <div class="p-5 text-center text-muted" data-chat-target="threadEmpty" hidden>
                            <div class="mb-2">{{ ux_icon('bx:message-rounded-detail') }}</div>
                            <p class="mb-2 fw-semibold">{{ 'chat.thread.empty.title'|trans }}</p>
                            <p class="mb-0 small">{{ 'chat.thread.empty.helper'|trans }}</p>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <form class="chat-composer" data-action="submit->chat#submitPrompt" data-chat-target="composerForm">
                            <div class="input-group">
                                <textarea
                                    class="form-control"
                                    rows="3"
                                    placeholder="{{ 'chat.actions.placeholder'|trans }}"
                                    data-chat-target="promptInput"
                                    required
                                ></textarea>
                                <button
                                    class="btn btn-primary d-flex align-items-center gap-2"
                                    type="submit"
                                    data-chat-target="sendButton"
                                >
                                    {{ ux_icon('bx:send') }}<span>{{ 'chat.actions.send'|trans }}</span>
                                </button>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <div class="text-muted small">{{ 'chat.thread.disclaimer'|trans }}</div>
                                <button
                                    type="button"
                                    class="btn btn-link btn-sm text-decoration-none p-0"
                                    data-action="click->chat#retryLastPrompt"
                                    data-chat-target="retryButton"
                                    hidden
                                >
                                    {{ ux_icon('bx:refresh') }}
                                    <span>{{ 'chat.actions.retry'|trans }}</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
