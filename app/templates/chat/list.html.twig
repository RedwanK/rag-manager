{% extends 'layout/app.html.twig' %}

{% block title %}{{ 'chat.title'|trans }}{% endblock %}

{% block page_header %}
    <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
        <div>
            <p class="text-muted mb-1">{{ 'chat.lead'|trans }}</p>
            <h4 class="mb-0">{{ 'chat.title'|trans }}</h4>
            <div class="text-muted small mt-1">{{ 'chat.helper'|trans }}</div>
        </div>
        <form action="{{ path('chat_ui_new') }}" method="post" class="d-flex align-items-center">
            <input type="hidden" name="_token" value="{{ csrf_token('chat_ui_new') }}">
            <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                {{ ux_icon('bx:plus') }}<span>{{ 'chat.sidebar.new'|trans }}</span>
            </button>
        </form>
    </div>
{% endblock %}

{% block page_content %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0">{{ 'chat.menu.all'|trans }}</h6>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>{{ 'chat.table.title'|trans }}</th>
                        <th class="text-nowrap">{{ 'chat.table.last_activity'|trans }}</th>
                        <th class="text-nowrap">{{ 'chat.table.created_at'|trans }}</th>
                        <th class="text-end">{{ 'chat.table.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for conversation in conversations %}
                    <tr>
                        <td class="text-truncate" style="max-width: 320px;">
                            <a href="{{ path('chat_ui_show', {id: conversation.id}) }}" class="fw-semibold text-body">
                                {{ conversation.title ?: 'Nouvelle discussion' }}
                            </a>
                        </td>
                        <td class="text-nowrap">{{ conversation.lastActivityAt|date('d/m/Y H:i') }}</td>
                        <td class="text-nowrap">{{ conversation.createdAt ? conversation.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td class="text-end">
                            <a href="{{ path('chat_ui_show', {id: conversation.id}) }}" class="btn btn-sm btn-outline-primary">
                                {{ ux_icon('bx:chat') }} {{ 'chat.actions.open'|trans }}
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            {{ 'chat.sidebar.empty.helper'|trans }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
