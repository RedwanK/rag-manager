{% set currentRoute = app.request.attributes.get('_route') %}
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
    <div class="menu-inner-shadow"></div>

    <ul class="menu-inner py-1">
        <li class="p-4 w-100 d-flex justify-content-between align-items-center">
            <span class="app-brand-logo demo d-flex align-items-center">
                <i class="bx bxs-data fs-2 lh-1 text-primary"></i>
                <span class="app-brand-text demo menu-text fw-bolder ms-2">{{ 'app.name'|trans }}</span>
            </span>
            <div class="d-flex justify-content-center align-items-center">
                <div class="d-flex align-items-center">
                    {{ ux_icon('bx:sun') }}
                </div>
                <div class="form-check form-switch mb-0 d-flex justify-content-center align-items-center">
                    <input class="form-check-input" type="checkbox" id="theme-toggle" data-theme-toggle>
                </div>
                <div class="d-flex align-items-center">
                    {{ ux_icon('bx:moon') }}
                </div>
            </div>

        </li>

        {% set recentConversations = recent_conversations() %}
        <li class="menu-item {{ currentRoute == 'chat_ui_index' ? 'active' }}">
            <a href="{{ path('chat_ui_index') }}" class="menu-link">
                <div>{{ 'chat.menu.all'|trans({}, null, 'messages') }}</div>
            </a>
        </li>
        {% if recentConversations is not empty %}
            <li class="menu-header small text-uppercase mt-2 ms-3 mb-1 text-muted">
                <span>{{ 'chat.menu.recent'|trans({}, null, 'messages') }}</span>
            </li>
            {% for conversation in recentConversations %}
                <li class="menu-item">
                    <a href="{{ path('chat_ui_show', {id: conversation.id}) }}" class="menu-link">
                        <div class="d-flex flex-column">
                            <span class="text-truncate">{{ conversation.title ?: 'Nouvelle discussion' }}</span>
                            <small class="text-muted">{{ conversation.lastActivityAt ? conversation.lastActivityAt|date('d/m H:i') : '' }}</small>
                        </div>
                    </a>
                </li>
            {% endfor %}
        {% endif %}

        <li class="menu-header small text-uppercase mt-2 ms-3 mb-1 text-muted">
            <span>{{ 'menu.configuration'|trans({}, null, 'messages') }}</span>
        </li>

        <li class="menu-item {{ currentRoute starts with 'repository_tree' ? 'active' }}">
            <a href="{{ path('repository_tree') }}" class="menu-link d-flex align-items-center">
                {{ ux_icon('bx:file-find') }}&nbsp;
                <div>{{ 'menu.tree'|trans }}</div>
            </a>
        </li>

        {% if is_granted('ROLE_EDITOR') %}
            <li class="menu-item {{ currentRoute starts with 'ingestion_queue_' ? 'active' }}">
                <a href="{{ path('ingestion_queue_index') }}" class="menu-link d-flex align-items-center">
                    {{ ux_icon('bx:list-check') }}&nbsp;
                    <div>{{ 'ingestion.menu'|trans }}</div>
                </a>
            </li>
            <li class="menu-item {{ currentRoute starts with 'ingestion_logs_' ? 'active' }}">
                <a href="{{ path('ingestion_logs_index') }}" class="menu-link d-flex align-items-center">
                    {{ ux_icon('bx:history') }}&nbsp;
                    <div>{{ 'ingestion.logs.menu'|trans }}</div>
                </a>
            </li>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <li class="menu-item {{ currentRoute starts with 'repository_index' ? 'active' }}">
                <a href="{{ path('repository_index') }}" class="menu-link d-flex align-items-center">
                    {{ ux_icon('bi:gear-wide') }}&nbsp;
                    <div>{{ 'menu.repository'|trans }}</div>
                </a>
            </li>
            <li class="menu-item {{ currentRoute starts with 'admin_user_' ? 'active' }}">
                <a href="{{ path('admin_user_index') }}" class="menu-link d-flex align-items-center">
                    {{ ux_icon('bx:user-circle') }}&nbsp;
                    <div>{{ 'menu.users'|trans }}</div>
                </a>
            </li>
        {% endif %}

        <li class="menu-header small text-uppercase">
            <span class="menu-header-text">{{ 'menu.connected'|trans }}</span>
            <div class="font-small mb-2">{{ app.user ? app.user.userIdentifier : 'menu.guest'|trans }}</div>
            <a class="btn btn-sm btn-outline-secondary text-center" href="{{ path('app_logout') }}">
                {{ ux_icon('bx:log-out') }}
                <span>{{ 'menu.logout'|trans }}</span>
            </a>
        </li>
    </ul>
</aside>
