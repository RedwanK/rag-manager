{% set classes = {
    'success': 'success',
    'error': 'danger',
    'warning': 'warning',
    'info': 'info',
    'notice': 'info'
} %}

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ classes[label] ?? 'secondary' }} alert-dismissible fade show" role="alert">
            <span class="fw-semibold">{{ message }}</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'form.actions.close'|trans }}"></button>
        </div>
    {% endfor %}
{% endfor %}
